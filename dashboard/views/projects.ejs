<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %> - Chief of Staff</title>
  <link rel="stylesheet" href="/style.css">
  <script src="/htmx.min.js"></script>
</head>
<body>
  <div class="app">
    <%- include('partials/sidebar', { currentPage }) %>
    <main class="main">
      <div class="page-header">
        <h2>Projects</h2>
        <div class="date"><%= projects.length %> tracked projects</div>
      </div>

      <div class="grid grid-3">
        <% projects.forEach(project => { %>
          <a href="/projects/<%= encodeURIComponent(project.name) %>" class="project-card-link">
            <div class="project-card">
              <div class="project-header">
                <span class="project-name"><%= project.name %></span>
                <span class="status-badge <%= project.status.toLowerCase() %>"><%= project.status %></span>
              </div>

              <% if (project.description) { %>
                <div class="project-description"><%= project.description %></div>
              <% } %>

              <% if (project.recentWork && project.recentWork.length > 0) { %>
                <div class="project-section">
                  <div class="project-section-label">Recent Work</div>
                  <ul>
                    <% project.recentWork.slice(0, 3).forEach(item => { %>
                      <li><%= item %></li>
                    <% }) %>
                  </ul>
                </div>
              <% } %>

              <% if (project.openItems && project.openItems.length > 0) { %>
                <div class="project-section">
                  <div class="project-section-label">Open Items</div>
                  <ul>
                    <% project.openItems.slice(0, 3).forEach(item => { %>
                      <li><%= item %></li>
                    <% }) %>
                  </ul>
                </div>
              <% } %>

              <% if (syncStatus[project.name]) { %>
                <div class="sync-status">Last synced: <%= syncStatus[project.name] %></div>
              <% } %>
            </div>
          </a>
        <% }) %>
      </div>

      <% if (projects.length === 0) { %>
        <div class="empty-state">No projects found in project-index.md</div>
      <% } %>
    </main>
  </div>
</body>
</html>
