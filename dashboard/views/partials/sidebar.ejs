<nav class="sidebar">
  <div class="sidebar-header">
    <h1>Chief of Staff</h1>
    <div class="subtitle">Personal Dashboard</div>
  </div>

  <div class="sidebar-section">
    <div class="sidebar-section-label">Navigation</div>
    <ul class="nav-links">
      <li>
        <a href="/" class="<%= currentPage === 'briefing' ? 'active' : '' %>">
          <span class="icon">&#127919;</span>
          Daily Briefing
        </a>
      </li>
      <li>
        <a href="/projects" class="<%= currentPage === 'projects' ? 'active' : '' %>">
          <span class="icon">&#128193;</span>
          Projects
        </a>
      </li>
      <li>
        <a href="/activity" class="<%= currentPage === 'activity' ? 'active' : '' %>">
          <span class="icon">&#128221;</span>
          Activity
        </a>
      </li>
    </ul>
  </div>

  <% if (typeof sidebarLogs !== 'undefined' && sidebarLogs && sidebarLogs.length > 0) { %>
    <div class="sidebar-section">
      <div class="sidebar-section-label">Recent</div>
      <ul class="nav-links nav-links-secondary">
        <% sidebarLogs.slice(0, 5).forEach(log => { %>
          <li>
            <a href="/logs/<%= log.file %>" class="sidebar-content-link" title="<%= log.title %>">
              <span class="sidebar-content-title"><%= log.title.length > 22 ? log.title.substring(0, 22) + '...' : log.title %></span>
              <span class="sidebar-content-date"><%= log.date ? log.date.split('-').slice(1).join('/') : '' %></span>
            </a>
          </li>
        <% }) %>
      </ul>
    </div>
  <% } %>
</nav>
