<% if (priorities.p0.length === 0 && priorities.p1.length === 0 && priorities.p2.length === 0) { %>
  <div class="empty-state">No priorities defined</div>
<% } else { %>
  <% if (priorities.p0.length > 0) { %>
    <div class="priority-section">
      <span class="priority-label p0">P0 - Critical</span>
      <ul class="priority-list">
        <% priorities.p0.forEach(p => { %>
          <li><%= p %></li>
        <% }) %>
      </ul>
    </div>
  <% } %>

  <% if (priorities.p1.length > 0) { %>
    <div class="priority-section">
      <span class="priority-label p1">P1 - Important</span>
      <ul class="priority-list">
        <% priorities.p1.forEach(p => { %>
          <li><%= p %></li>
        <% }) %>
      </ul>
    </div>
  <% } %>

  <% if (priorities.p2.length > 0) { %>
    <div class="priority-section">
      <span class="priority-label p2">P2 - Nice to Have</span>
      <ul class="priority-list">
        <% priorities.p2.forEach(p => { %>
          <li><%= p %></li>
        <% }) %>
      </ul>
    </div>
  <% } %>
<% } %>
