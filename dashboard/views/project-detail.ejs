<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %> - Chief of Staff</title>
  <link rel="stylesheet" href="/style.css">
</head>
<body>
  <div class="app">
    <%- include('partials/sidebar', { currentPage }) %>
    <main class="main">
      <div class="detail-header">
        <a href="/projects" class="back-link">&larr; Back to Projects</a>
      </div>

      <div class="project-detail-page">
        <header class="project-detail-header">
          <div class="project-detail-title-row">
            <h1><%= project.name %></h1>
            <span class="status-badge <%= project.status.toLowerCase() %>"><%= project.status %></span>
          </div>
          <% if (project.description) { %>
            <p class="project-detail-description"><%= project.description %></p>
          <% } %>
          <% if (project.lastSynced) { %>
            <div class="sync-info">Last synced: <%= project.lastSynced %></div>
          <% } %>
        </header>

        <div class="grid grid-2">
          <!-- Left column: Project Knowledge -->
          <div>
            <% if (project.knowledgeHtml) { %>
              <div class="card">
                <div class="card-header">
                  <h3>Project Knowledge</h3>
                </div>
                <div class="card-body">
                  <div class="markdown-body project-knowledge-content">
                    <%- project.knowledgeHtml %>
                  </div>
                </div>
              </div>
            <% } else { %>
              <div class="card">
                <div class="card-header">
                  <h3>Project Overview</h3>
                </div>
                <div class="card-body">
                  <% if (project.openItems.length > 0) { %>
                    <div class="project-section">
                      <div class="project-section-label">Open Items</div>
                      <ul>
                        <% project.openItems.forEach(item => { %>
                          <li><%= item %></li>
                        <% }) %>
                      </ul>
                    </div>
                  <% } %>

                  <% if (project.recentWork.length > 0) { %>
                    <div class="project-section">
                      <div class="project-section-label">Recent Work</div>
                      <ul>
                        <% project.recentWork.forEach(item => { %>
                          <li><%= item %></li>
                        <% }) %>
                      </ul>
                    </div>
                  <% } %>

                  <% if (project.openItems.length === 0 && project.recentWork.length === 0) { %>
                    <div class="empty-state">No project-knowledge.md found</div>
                  <% } %>
                </div>
              </div>
            <% } %>
          </div>

          <!-- Right column: Logs and Inbox -->
          <div>
            <!-- Project Inbox -->
            <% if (project.inboxItems.length > 0) { %>
              <div class="card">
                <div class="card-header">
                  <h3>Inbox</h3>
                  <span class="badge"><%= project.inboxItems.length %> pending</span>
                </div>
                <div class="card-body">
                  <% project.inboxItems.forEach(item => { %>
                    <div class="inbox-item">
                      <div class="inbox-item-header">
                        <span class="inbox-item-title"><%= item.title %></span>
                      </div>
                      <% if (item.date) { %>
                        <div class="inbox-item-date"><%= item.date %></div>
                      <% } %>
                    </div>
                  <% }) %>
                </div>
              </div>
            <% } %>

            <!-- Project Logs -->
            <div class="card">
              <div class="card-header">
                <h3>Recent Logs</h3>
                <span class="badge"><%= project.projectLogs.length %> logs</span>
              </div>
              <div class="card-body">
                <% if (project.projectLogs.length === 0) { %>
                  <div class="empty-state">No logs found for this project</div>
                <% } else { %>
                  <% project.projectLogs.forEach(log => { %>
                    <div class="log-item">
                      <div class="log-header">
                        <span class="log-title"><%= log.title %></span>
                        <span class="log-date"><%= log.date || '' %></span>
                      </div>
                      <% if (log.sessionType) { %>
                        <span class="log-type"><%= log.sessionType %></span>
                      <% } %>
                    </div>
                  <% }) %>
                <% } %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </main>
  </div>
</body>
</html>
